<div class="readable">
    {% if configVars %}
        <h2>Custom Config Variables</h2>
            <table class="data fullwidth fixed-layout" dir="ltr">
            <tbody>
                {% for key, value in configVars %}
                    <tr>
                        <th class="light">{{ key }}</th>
                        <td>{{ value }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
    
    <h2>{{ "Environment Variables"|t('app') }}</h2>

    <table class="data fullwidth fixed-layout" dir="ltr">
        <tbody>
            {% for key, value in envVars %}
                <tr>
                    <th class="light">{{ key }}</th>
                    <td>{{ value }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


</div>